// Function Definition
FUNCTION_BLOCK staffing

	// Inputs
	VAR_INPUT
		funding : REAL; 
		staffing : REAL; 
	END_VAR
	
	// Outputs
	VAR_OUTPUT
		risk : REAL; 
	END_VAR
	
	// Define membership functions 
	// Sets Fuzzyfy
	FUZZIFY funding 
		TERM inadequate := (0, 1) (30, 1) (45, 0);
		TERM marginal := trian 25 50 75;
		TERM adequate := (50, 0)  (70, 1) (100, 1); 
	END_FUZZIFY 
	
	FUZZIFY staffing 
		TERM small :=
		(1, 1)  (15, 0);
		TERM large := (6, 0)  (20, 1);
	END_FUZZIFY
	
	// Sets - Defuzzyfy
	DEFUZZIFY risk 
		TERM low := (0, 1)  (45, 0);
		TERM normal := trian
		20.0 50.0 80.0;
		TERM high := (55, 0)  (100, 1);
		METHOD : COG;
		DEFAULT := 0; 
	END_DEFUZZIFY
	
END_FUNCTION_BLOCK