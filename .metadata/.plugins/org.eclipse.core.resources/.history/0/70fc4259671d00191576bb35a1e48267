// Function Definition
FUNCTION_BLOCK staffing

	// Inputs
	VAR_INPUT
		funding : REAL; 
		staffing : REAL; 
	END_VAR
	
	// Outputs
	VAR_OUTPUT
		risk : REAL; 
	END_VAR
	
	// Define membership functions
	FUZZIFY funding 
		TERM inadequate := (0, 1) (30, 1) (45, 0);
		TERM marginal := trian 25 50 75;
		TERM adequate := (50, 0)  (70, 1) (100, 1); 
	END_FUZZIFY 
	
	FUZZIFY staffing 
		TERM small :=
		(1, 1)  (15, 0);
		TERM large := (6, 0)  (20, 1);
	END_FUZZIFY
	
END_FUNCTION_BLOCK